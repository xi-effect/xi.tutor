{
  "name": "xi.tutor",
  "private": true,
  "scripts": {
    "build": "turbo run build --no-daemon",
    "build:debug": "pnpm --filter xi.web build:debug",
    "build:dev": "pnpm --filter xi.web build:dev",
    "dev": "pnpm --filter xi.web dev",
    "dev:all": "turbo run dev --concurrency 30",
    "preview": "pnpm --filter xi.web preview",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
