{
  "name": "xi.desktop",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm run dev:web\" \"pnpm run dev:electron\"",
    "dev:web": "cd ../xi.web && pnpm dev",
    "dev:electron": "pnpm run build:main && wait-on http://localhost:5173 -t 30000 && cross-env NODE_ENV=development electron .",
    "build": "pnpm run build:web && pnpm run build:main && pnpm run build:electron",
    "build:web": "cd ../xi.web && pnpm build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:electron": "electron-builder",
    "clean": "rm -rf dist release",
    "electron": "electron .",
    "lint": "eslint ."
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.9",
    "@types/node": "^20.3.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.9.3",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "common.eslint": "*",
    "@eslint/js": "^9.19.0",
    "@tanstack/eslint-plugin-query": "5.66.1"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "electronVersion": "39.2.7",
  "build": {
    "appId": "com.sovlium.desktop",
    "productName": "Sovlium",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/main/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../xi.web/build",
        "to": "xi.web/build",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
